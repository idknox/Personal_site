<% content_for :loggedin do %>

  <p>Welcome, Ian</p>
  <form method="get" action="/logout">
    <button type="submit" name="logout" class="button">Logout</button>
  </form>

  <p><a href="/pw">Change Password</a></p>

<% end %>

<% content_for :main do %>
<div id="users">
  <table class="form">
    <tbody>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Birthday</th>
      <th>Join Date</th>
    </tr>
    <% users.each do |user| %>
      <tr>
        <td><%= user["first_name"] + " " + user["last_name"] %></td>
        <td><%= user["email"] %></td>
        <td><%= user["password"] %></td>
        <td><%= Date.parse(user["birthday"]).strftime("%m-%d-%Y") %></td>
        <td><%= Date.parse(user["join_date"]).strftime("%m-%d-%Y") %></td>
        <td>
          <form method="post" action="/admin/<%= user["id"] %>"/>
          <input type="hidden" name="_method" value="delete"/>
          <input type="submit" class="main_button" value="Delete"/>
          </form>
        </td>
      </tr>
    <% end %>
      </tbody>
      </table>
</div>
<% end %>
